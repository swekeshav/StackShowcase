<style>
	.split-pane-container {
		display: grid;
		grid-template-columns: 300px 1fr; /* Left pane: 300px, Right pane: flexible */
		height: 100vh;
		gap: 0;
	}
	.left-pane {
		background-color: #f8f9fa;
		border-right: 1px solid #dee2e6;
		overflow-y: auto;
		padding: 20px;
	}

	.right-pane {
		overflow-y: auto;
		padding: 20px;
	}

	/* Responsive: Stack on small screens */
	@@media (max-width: 768px) {
		.split-pane-container {
			grid-template-columns: 1fr;
			grid-template-rows: auto 1fr;
		}
	}
</style>
